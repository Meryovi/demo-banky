{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**"]
  },
  "formatter": {
    "lineWidth": 120,
    "enabled": true,
    "indentStyle": "space",
    "includes": [
      "**",
      "!**/src/Banky.Spa/node_modules/**/*",
      "!**/src/Banky.Spa/dist/**/*",
      "!**/src/Banky.Spa/obj/**/*"
    ]
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "bracketSameLine": true
    }
  }
}
